doctype html
html
  head
    link(href="./css/bootstrap.min.css",rel="stylesheet")
    script(src="./libs/jquery.min.js")
    script(src="./libs/bootstrap.min.js")
    script(src="./adjustment.js")
    script(src='./libs/angular.min.js')
    
  body
    .container
      .row
        .col-md-6
          if pic
            h1  #{name}
            #core
              img(id= 'image', src='./uploads/#{source}', alt='#{name}', style='position:relative;width:400px;height:400px;')
          else
            h1  Default Picture
            img(src='./uploads/default.jpg', alt='Default Picture', style='width:400px;height:400px;')
          br
          br
          br
          br
          form(action='/upload', enctype='multipart/form-data', method='post')
            | Add a title: 
            input(name='title', type='text', placeholder='Image')
            br
            br
            input(multiple='multiple', name='upload', type='file')
            br
            input(type='submit', value='Upload')
        .col-md-3
            h3 Available Actions
            button.btn.btn-primary(id='rotate', type="button") Rotate
            br
            br
            button.btn.btn-primary(id='translate', type="button") Translate
            br
            br
            button.btn.btn-primary(id='opacity', type="button") Opacity
            br
            br
            button.btn.btn-primary(id='scale', type="button") Scale
            br
            br
        .col-md-3
            h3 Applied Actions
            #applied
            br
            button.btn.btn-danger(id='reset', role="button") Reset
